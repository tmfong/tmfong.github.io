
<div class="row daily-goal">

  {{#unless checkedIn}}   
    <div class="col-xs-12">
      <button type="button" 
        class="btn btn-default btn-sm" 
        {{action 'dailyCheckIn'}}>
        Check-in
      </button>         
    </div>
  {{/unless}}

  {{#with controllers.application.lastCheckInDay}}
    {{#if dailyGoals}}
        {{view 'day-view'}}    
    {{/if}}
  {{/with}}
</div>

<div class="row">

  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">  
    {{!line-chart 
      data=totalAssetsData
      caption='Total'
      isLoaded=model.isLoaded    
      }}
  </div>  

</div>