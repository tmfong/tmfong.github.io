 <!-- Modal -->
{{#modal-dialog}}

  <div class="modal-header">           

  </div> 

  <div class="modal-body">
    {{input placeholder="New action..." 
      class="form-control" 
      value=body}}       
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-success btn-sm pull-right" 
      {{action 'update' this }}>
      <span class="glyphicon glyphicon-ok"></span>
    </button>      
  </div>

{{/modal-dialog}}